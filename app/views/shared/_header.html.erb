 <table class="header" cellspacing="0" border="0">
        <tbody>
          <tr>
            <td class="headerLogo">
              <%= link_to(image_tag("footer_bug.gif",  :alt=> "warper logo"), :root, :class=>"headerlogo")%>

              <span class="headerText">Map Warper</span>
              <span class="headerTextBeta">beta</span>
            </td>
            <td class="userStatus">
              <% if logged_in? %>Logged in as:
                <%= link_to h(current_user.login.capitalize), user_path(current_user) %>
                <%= link_to "All Maps", maps_path  %>
                <%= link_to "My Maps", my_maps_path(current_user) %>
                <%= link_to "My Activity", user_activity_path(current_user) %>

                <%= link_to "Settings", edit_user_path(current_user) %>
                <%= link_to "Log Out", logout_url %>


              <% else %>
                <%= link_to "Sign In", new_session_path %>
                <%= link_to "Create Account", new_user_path %>
              <% end %>
              <% if logged_in? %>
                <% if current_user.has_role?("administrator") || current_user.has_role?("super user") %>
                  <br />
                  <%= link_to "All Activity", activity_url %>

                  <%= link_to "Administer Users", users_path %>

                <% end %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
